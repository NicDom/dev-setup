#!usr/bin/env bash

sudo apt update -y && sudo apt full-upgrade -y

# install latest git
echo "âœ¨Installing latest git..."
sudo add-apt-repository ppa:git-core/ppa
sudo apt update -y
sudo apt install -y git

# curl
# if you want to have the latest version run the command below
# sudo add-apt-repository ppa:savoury1/curl34 -y
echo "âœ¨Installing curl..."
sudo apt install curl -y


# install starship
echo "ðŸš€Installing starship..."
curl -sS https://starship.rs/install.sh | sh -s -- -y

# install zsh
echo "âœ¨Installing zsh..."
sudo apt install zsh -y

echo "make zsh default shell..."
chsh -s $(which zsh)

# Install zsh config
echo "âœ¨Installing zsh config..."
curl -Ls https://raw.githubusercontent.com/NicDom/zdotdir/main/installer | bash

# install ripgrep
echo "âœ¨Installing ripgrep..."
sudo apt install -y ripgrep

# install fzf
echo1 "âœ¨Installing fzf..."
git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf
~/.fzf/install

# install bat
echo "âœ¨Installing bat..."
sudo apt install -y bat
mkdir -p ~/.local/bin
ln -s /usr/bin/batcat ~/.local/bin/bat

# pyenv
curl -Ls https://raw.githubusercontent.com/NicDom/dev-setup/main/pyenv-setup | bash

# poetry
echo "âœ¨Installing poetry..."
curl -sSL https://install.python-poetry.org | python3 -

# pipx
echo "âœ¨Installing pipx..."
python3 -m pip install --user pipx
python3 -m pipx ensurepath

# add pipx to path
export PATH="$PATH:$HOME/.local/bin"

# cookiecutter, nox, nox-poetry
echo "âœ¨Installing cookiecutter, nox, nox-poetry..."
pipx install cookiecutter
pipx install nox
pipx inject nox nox-poetry

# nvm
echo "âœ¨Installing nvm..."
curl https://raw.githubusercontent.com/creationix/nvm/master/install.sh | bash

# brew
echo "âœ¨Installing brew..."
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"

# node
# brew install node
# nvm install npm
# nvm install node
# nvm install --lts

# install neovim
echo "âœ¨Installing neovim..."
brew install neovim
# sudo apt-get install -y software-properties-common
# sudo add-apt-repository ppa:neovim-ppa/stable
# sudo apt-get update -y
# sudo apt-get install -y neovim


echo "ðŸš€Finished installing all the things!"
echo "Following packages have been installed:"
echo "git, curl, zsh, ripgrep, fzf, bat, pyenv, poetry, pipx, nvm, brew, neovim, cookiecutter, nox, nox-poetry"
